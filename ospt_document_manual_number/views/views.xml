<odoo>
  <data>
    <!-- Menambahkan field manual number di form po -->
    <record id="purchase.purchase_order_form_manual_number" model="ir.ui.view">
          <field name="name">purchase.purchase_order_form_manual_number</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_form"/>
          <field name="type">form</field>
          <field name="arch" type="xml">
              <field name="name" position="after">
                <br/>
                <field name="manual_number"/>
              </field>
          </field>
      </record>

    <!-- Menambahkan field manual number di form incoming product -->
