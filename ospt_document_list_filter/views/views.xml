 <odoo>
  <data noupdate="0">
        <record id="user_allowed_tree" model="ir.ui.view">
            <field name="name">account.config.settings.inv.user.allowed.tree</field>
            <field name="model">account.config.settings.inv.user.allowed</field>
            <field name="arch" type="xml">
                <tree editable="top" string="User Allowed">
                    <field name="user_allowed_id" required="1" options='{"no_open": True}'/>
                </tree>
            </field>
        </record>

        <record id="act_user_allowed" model="ir.actions.act_window">
            <field name="name">User Allowed For List Invoice</field>
            <field name="res_model">account.config.settings.inv.user.allowed</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="user_allowed_tree"/>            
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add user allowed
              </p><p>
                Add user that allowed to see all list data in Invoice Tree
              </p>
            </field>
        </record>
      <menuitem id="menu_user_allowed" parent="account.menu_finance_configuration" action="act_user_allowed"
        name="Invoice List User Allowed"/>
  </data>
</odoo>